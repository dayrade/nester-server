{
  "name": "nester-server",
  "version": "1.0.0",
  "description": "Express.js backend server for Nester platform",
  "main": "app.js",
  "scripts": {
    "start": "node app.js",
    "dev": "nodemon app.js",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "start:prod": "node dist/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "clean": "rm -rf dist",
    "lint": "eslint . --ext .ts,.js",
    "lint:fix": "eslint . --ext .ts,.js --fix",
    "validate-config": "node -e \"require('./config/config.js'); console.log('Configuration is valid');\"",
    "check-health": "node -e \"require('./config/supabaseClient.js').checkConnection().then(r => console.log('Health check:', r ? 'PASS' : 'FAIL'))\"",
    "test:auth": "jest tests/auth.test.js"
  },
  "dependencies": {
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-select": "^2.2.5",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tabs": "^1.1.12",
    "@sentry/node": "^9.39.0",
    "@supabase/supabase-js": "^2.38.0",
    "bcrypt": "^6.0.0",
    "class-variance-authority": "^0.7.1",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "critters": "^0.0.23",
    "dompurify": "^3.0.5",
    "dotenv": "^16.6.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-slow-down": "^2.0.1",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "jsdom": "^22.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "pg": "^8.16.3",
    "puppeteer": "^21.0.0",
    "uuid": "^9.0.1",
    "validator": "^13.11.0",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.0.0",
    "@types/pg": "^8.11.10",
    "@types/puppeteer": "^7.0.4",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "jest": "^30.0.4",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3",
    "typescript": "^5.0.0"
  },
  "keywords": [
    "express",
    "backend",
    "api",
    "authentication",
    "supabase"
  ],
  "author": "Nester Platform",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  }
}
